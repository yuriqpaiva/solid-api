{
  "openapi": "3.0.0",
  "info": {
    "title": "Solid Architecture API Documentation",
    "description": "API to practice and apply SOLID principles",
    "version": "1.0.0",
    "contact": {
      "email": "yuriqpaiva@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "get": {
        "tags": ["User"],
        "summary": "Get all users",
        "description": "Get all users",
        "parameters": [
          {
            "name": "user_id",
            "description": "ID of an user that is admin",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "admin": {
                        "type": "boolean"
                      },
                      "email": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string"
                      },
                      "updated_at": {
                        "type": "string"
                      }
                    }
                  },
                  "example": [
                    {
                      "id": "bc09b4bc-8ab7-46b6-b4b6-a6e37529452b",
                      "name": "John Doe",
                      "admin": true,
                      "email": "john.doe@example.com",
                      "created_at": "2022-10-15T20:15:19.045Z",
                      "updated_at": "2022-10-15T20:15:19.045Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Needs to be an administrator",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "You need to be an administrator for this!"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User"],
        "summary": "Create a new user",
        "description": "Create a new user that is not `admin`",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Doe",
                  "email": "john.doe@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Email is already being used",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "This email is already being used"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["User"],
        "summary": "Get one user",
        "description": "Get one user by ID",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "UUID of the user to get"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "bc09b4bc-8ab7-46b6-b4b6-a6e37529452b",
                    "name": "John Doe",
                    "admin": true,
                    "email": "john.doe@example.com",
                    "created_at": "2022-10-15T20:15:19.045Z",
                    "updated_at": "2022-10-15T20:15:19.045Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["User"],
        "summary": "Turns an user into admin",
        "description": "Turns an user into `admin`",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "UUID of the user to turn admin"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    },
                    "updated_at": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "id": "bc09b4bc-8ab7-46b6-b4b6-a6e37529452b",
                    "name": "John Doe",
                    "admin": true,
                    "email": "john.doe@example.com",
                    "created_at": "2022-10-15T20:15:19.045Z",
                    "updated_at": "2022-10-15T20:15:19.045Z"
                  }
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "error": "User not found"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
